{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "Basic setup to for the backend engineer test",
  "main": "dist/bin/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "dev": "ts-node-dev --inspect=0.0.0.0:${DEBUG_PORT:-3001} --transpile-only --respawn src/bin/index.ts | pino-pretty",
    "test": "NODE_ENV=test jest --testPathPattern=test --coverage",
    "format": "prettier --write .",
    "lint": "eslint .",
    "gen-ts": "graphql-codegen --config codegen.yml -w"
  },
  "author": "Jo√£o Almeida",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "4.9.5",
    "@as-integrations/koa": "1.1.1",
    "@fastify/error": "3.4.1",
    "@koa/cors": "5.0.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "graphql": "16.8.1",
    "knex": "3.0.1",
    "koa": "2.14.2",
    "koa-bodyparser": "4.4.1",
    "koa-pino-logger": "4.0.0",
    "lodash": "4.17.21",
    "mysql2": "3.6.5",
    "pino-http": "8.5.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@parcel/watcher": "2.3.0",
    "@testcontainers/mysql": "10.3.2",
    "@types/cors": "2.8.13",
    "@types/jest": "29.5.2",
    "@types/koa": "2.13.12",
    "@types/koa__cors": "4.0.3",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-pino-logger": "3.0.4",
    "@types/lodash": "4.14.202",
    "@types/supertest": "2.0.16",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "pino-pretty": "10.2.3",
    "pre-commit": "1.2.2",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.0.4",
    "wait-on": "7.2.0"
  },
  "lint-staged": {
    "*.{ts,json,md,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "test"
  ]
}
